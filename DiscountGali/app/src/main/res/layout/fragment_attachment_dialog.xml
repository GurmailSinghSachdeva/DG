<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="40dp"
        android:src="@drawable/dialog_arrow" />

    <TableLayout
        android:id="@+id/attachment_table"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/dialog_shape">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/tv_dialog_camera"
                style="@style/Attachement_Dialog_TextView"
                android:drawableLeft="@drawable/group_chat1_popup_camera"
                android:text="Camera"
                android:textSize="?attr/fifteen_sp" />

            <TextView
                android:id="@+id/tv_dialog_gallery"
                style="@style/Attachement_Dialog_TextView"
                android:drawableLeft="@drawable/group_chat1_popup_gallary"
                android:text="Gallery"
                android:textSize="?attr/fifteen_sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">

            <TextView
                android:id="@+id/tv_dialog_audio"
                style="@style/Attachement_Dialog_TextView"
                android:drawableLeft="@drawable/group_chat1_popup_audio"
                android:text="Audio"
                android:textSize="?attr/fifteen_sp" />

            <TextView
                android:id="@+id/tv_dialog_video"
                style="@style/Attachement_Dialog_TextView"
                android:drawableLeft="@drawable/group_chat1_popup_vedio"
                android:text="Video"
                android:textSize="?attr/fifteen_sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/tv_dialog_location"
                style="@style/Attachement_Dialog_TextView"
                android:drawableLeft="@drawable/group_chat1_popup_location"
                android:text="Location"
                android:textSize="?attr/fifteen_sp" />

            <TextView
                android:id="@+id/tv_dialog_files"
                style="@style/Attachement_Dialog_TextView"
                android:drawableLeft="@drawable/group_chat1_popup_files"
                android:text="Files"
                android:textSize="?attr/fifteen_sp" />
        </TableRow>

    </TableLayout>

</LinearLayout>

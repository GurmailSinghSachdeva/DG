<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linear_unsecured_first_child"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="horizontal"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="70dp">

                <ImageView
                    android:id="@+id/iconImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:src="@drawable/group_profile_icon" />

                <View
                    android:id="@+id/view_status"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="11dp"
                    android:layout_marginRight="11dp"
                    android:background="@drawable/ic_grey_dot" />

            </RelativeLayout>

            <com.securedcommunications.securedcomm.utility.MyTextView
                android:id="@+id/textTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:singleLine="true"
                android:text="Mike Anderson"/>

            <com.securedcommunications.securedcomm.utility.MyButton
                android:id="@+id/btn_invite"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:background="@drawable/button_border"
                android:text="Invite" />
            <ImageView
                android:id="@+id/img_secured_list_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/thirty_dp"
                android:paddingRight="@dimen/ten_dp"
                android:paddingTop="@dimen/twenty_dp"
                android:paddingBottom="@dimen/twenty_dp"
                android:src="@drawable/chat121_ic_sidemenu" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/linear_unsecured_second_child"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@android:color/darker_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/img_unsecured_list_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="0.2"
            android:padding="10dp"
            android:src="@drawable/ic_back" />

        <com.securedcommunications.securedcomm.utility.MyTextView
            android:id="@+id/txt_unsecured"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/title_unsecured"
            android:textSize="?attr/fifteen_sp" />

        <ImageView
            android:id="@+id/img_unsecured_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:padding="10dp"
            android:src="@drawable/favorites_list_ic_call" />

        <ImageView
            android:id="@+id/img_unsecured_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:padding="10dp"
            android:src="@drawable/favorites_list_ic_mess" />

        <com.securedcommunications.securedcomm.utility.MyButton
            android:id="@+id/btn_back_invite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_border"
            android:text="Invite"
            android:textColor="@color/red" />
    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/DrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar_con"
            android:background="@color/app_orange"
            android:orientation="horizontal">

            <!--<ImageView-->
            <!--android:id="@+id/back_search"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:src="@drawable/ic_back" />-->
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/header_size"
                android:layout_gravity="center"
                android:gravity="center"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/edit_text_search"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/border_edittext"
                        android:drawablePadding="10dp"
                        android:padding="10dp"
                        android:ellipsize="end"
                        android:hint="Search for Stores, Offers and Cashback"
                        android:maxLines="1"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="14sp"
                        android:inputType="textCapSentences"/>

                    <ImageView
                        android:id="@+id/clear_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:paddingLeft="12dp"
                        android:layout_weight="0.1"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingRight="8dp"
                        android:src="@drawable/ic_youtube_searched_for_black_24dp" />


                </LinearLayout>

            </android.support.v7.widget.Toolbar>

        </LinearLayout>

        <include
            android:id="@+id/tool_bar"
            layout="@layout/activity_home"/>


    </LinearLayout>



    <ScrollView
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_gravity="left">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true">

            <include
                android:id="@+id/header"
                layout="@layout/nav_header_home"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true" />

            <View
                android:id="@+id/separator"
                android:layout_width="320dp"
                android:layout_height="1dp"
                android:layout_below="@+id/header"
                android:background="@color/grayLight" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/RecyclerView"
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/separator"
                android:layout_gravity="left"
                android:background="#ffffff"
                android:scrollbars="vertical">
            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>
    </ScrollView>

</android.support.v4.widget.DrawerLayout>

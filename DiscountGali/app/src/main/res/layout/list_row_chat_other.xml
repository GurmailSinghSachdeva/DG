<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/img_profile_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="@dimen/ten_dp"
        android:src="@drawable/face_fourth"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/twenty_dp"
            android:text="Emily"
            android:textColor="#888888"
            android:textSize="?attr/font_medium"/>

        <TextView
            android:id="@+id/txt_chat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="I am in a tour"
            android:paddingRight="@dimen/seventy_dp"
            android:textSize="?attr/font_medium"
            android:textColor="@color/app_black"/>

        <ImageView
            android:id="@+id/img_chat_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="@dimen/chat_image_size"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:src="@drawable/face_third"
            android:layout_marginRight="@dimen/twenty_dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left">

            <TextView
                android:id="@+id/txt_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="11.15 am"
                android:textSize="?attr/font_small" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
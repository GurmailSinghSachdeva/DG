<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.securedcommunications.securedcomm.activity.AboutActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/tb_register"
        layout="@layout/register_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/upper_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_gravity="top"
            android:orientation="vertical"
            android:paddingBottom="@dimen/twenty_dp"
            android:paddingLeft="@dimen/thirty_dp"
            android:paddingRight="@dimen/thirty_dp"
            android:paddingTop="@dimen/twenty_dp">
            <com.securedcommunications.securedcomm.utility.MyTextView
                android:id="@+id/tv_app_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textColor="@color/black"
                android:textSize="?attr/fifteen_sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/login_logo" />

            <com.securedcommunications.securedcomm.utility.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/title_secured_comm"
                android:textColor="@color/black"
                android:textSize="?attr/fifteen_sp"
                android:textStyle="bold" />
            <com.securedcommunications.securedcomm.utility.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/twenty_dp"
                android:text="@string/about_desc"
                android:textColor="@color/dark_gray"
                android:textSize="?attr/fifteen_sp"
                android:textStyle="italic" />

            <LinearLayout
                android:id="@+id/contact_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/fourty_dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="false"
                android:orientation="horizontal"
                android:paddingRight="10dp">

                <com.securedcommunications.securedcomm.utility.MyTextView
                    android:id="@+id/contact_us_title"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="@dimen/five_dp"
                    android:text="@string/tv_contact_us"
                    android:textSize="?attr/fifteen_sp" />

                <RelativeLayout
                    android:id="@+id/contact_us_recycler_parent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:layout_weight="0.4">

                    <TextView
                        android:id="@+id/contact_us_right_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:textColor="@color/app_orange"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/contact_us_right_image"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/settings_ic" />
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                />





            <LinearLayout
                android:id="@+id/help_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="false"
                android:orientation="horizontal"
                android:paddingRight="10dp">

                <com.securedcommunications.securedcomm.utility.MyTextView
                    android:id="@+id/title_help"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="@dimen/five_dp"
                    android:text="@string/tv_help_faq"
                    android:textSize="?attr/fifteen_sp" />

                <RelativeLayout
                    android:id="@+id/help_recycler_parent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:layout_weight="0.4">

                    <TextView
                        android:id="@+id/help_right_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:textColor="@color/app_orange"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/help_right_image"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/settings_ic" />
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                />


        </LinearLayout>
    </ScrollView>
</LinearLayout>
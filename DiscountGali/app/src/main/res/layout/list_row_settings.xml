<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/five_dp"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="false"
        android:orientation="horizontal"
        android:paddingRight="10dp">

        <com.securedcommunications.securedcomm.utility.MyTextView
            android:id="@+id/settings_title"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/five_dp"
            android:text="Text"
            android:textSize="?attr/fifteen_sp" />

        <RelativeLayout
            android:id="@+id/settings_recycler_parent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_weight="0.4">

            <TextView
                android:id="@+id/settings_right_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/app_orange"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/settings_right_image"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/settings_ic" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        />
</LinearLayout>